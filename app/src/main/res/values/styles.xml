<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.DialogActivity" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@drawable/bag</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="pw_anim_style">
        <item name="android:windowEnterAnimation">@anim/pw_show</item>
        <item name="android:windowExitAnimation">@anim/pw_hide</item>
    </style>
</resources>
